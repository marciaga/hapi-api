{
    "server": {

    },
    "connections": [
        {
            "port": 3000,
            "labels": ["web"]
        }
    ],
    "registrations": [
        {
            "plugin": {
                "register": "good",
                "options": {
                    "ops": false,
                    "reporters": {
                        "console": [{
                            "module": "good-console"
                        }, "stdout"]
                    }
                }

            }
        },
        { "plugin": "vision" },
        {
            "plugin": {
                "register": "visionary",
                "options": {
                    "engines": { "hbs": "handlebars" },
                    "path": "src/templates",
                    "layoutPath": "src/templates/layout",
                    "layout": "default"
                }
            }
        },
        { "plugin": "inert" },
        {
            "plugin": {
                "register": "hapi-mongodb",
                "options": {
                    "url": "mongodb://localhost:27017/hapi-rest-mongo",
                    "settings": {
                        "db": {
                            "native_parser": false
                        }
                    }
                }
            }
        },
        { "plugin": "./modules/book" }
    ]
}
